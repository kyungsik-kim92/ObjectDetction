<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_detect"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.example.presentation.ui.search.detect.PermissionFragment"
        android:label="PermissionFragment">

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.example.presentation.ui.search.detect.CameraFragment"
        android:label="CameraFragment"
        tools:layout="@layout/fragment_camera">

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_camera_to_select_detect_item"
            app:destination="@id/select_detect_item_fragment" />

    </fragment>


    <fragment
        android:id="@+id/select_detect_item_fragment"
        android:name="com.example.presentation.ui.search.detect.SelectDetectFragment"
        android:label="SelectDetectItemFragment"
        tools:layout="@layout/fragment_select_detect"/>


</navigation>